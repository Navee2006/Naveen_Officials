/* USER CODE BEGIN Header */
/**
  ******************************************************************************
  * @file           : main.c
  * @brief          : 3x Ultrasonic Sensors (STM32F446RE)
  ******************************************************************************
  */
/* USER CODE END Header */
/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include <stdio.h>
#include <string.h>

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#define usTIM TIM4
#define TIMEOUT_LIMIT 30000
#define OBJECT_DISTANCE 10.0f

/* Distance variables for each sensor */
float distance1 = 0.0f;
float distance2 = 0.0f;
float distance3 = 0.0f;

/* UART buffer */
char uartBuf[100];
/* USER CODE END Includes */

/* Private variables ---------------------------------------------------------*/
TIM_HandleTypeDef htim4;
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_TIM4_Init(void);
void usDelay(uint32_t us);

/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  HAL_Init();
  SystemClock_Config();

  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_TIM4_Init();
  HAL_TIM_Base_Start(&htim4);

  while (1)
  {
	  /* =================================================================================================================
	   *
	   *******************************************  ULTRASONIC SENSOR->1  **************************************************
	   *
	   * ================================================================================================================= */

      uint32_t ticks1 = 0;
      uint32_t timeout1 = 0;

      /* Send trigger pulse to Sensor 1 */
      HAL_GPIO_WritePin(TRIG1_GPIO_Port, TRIG1_Pin, GPIO_PIN_RESET);
      usDelay(3);
      HAL_GPIO_WritePin(TRIG1_GPIO_Port, TRIG1_Pin, GPIO_PIN_SET);
      usDelay(10);
      HAL_GPIO_WritePin(TRIG1_GPIO_Port, TRIG1_Pin, GPIO_PIN_RESET);

      /* Wait for echo from Sensor 1 */
      while (HAL_GPIO_ReadPin(ECHO1_GPIO_Port, ECHO1_Pin) == GPIO_PIN_RESET)
      {
          timeout1++;
          if (timeout1 > TIMEOUT_LIMIT) break;
      }

      /* Measure pulse width from Sensor 1 */
      timeout1 = 0;
      while (HAL_GPIO_ReadPin(ECHO1_GPIO_Port, ECHO1_Pin) == GPIO_PIN_SET)
      {
          ticks1++;
          usDelay(2);
          timeout1++;
          if (timeout1 > TIMEOUT_LIMIT) break;
      }

      /* Calculate distance for Sensor 1 */
      distance1 = ticks1 * 0.0343f / 2.0f;

      /* Optional delay between sensors */
      HAL_Delay(5);


	  /* =================================================================================================================
	   *
	   *******************************************  ULTRASONIC SENSOR->2  **************************************************
	   *
	   * ================================================================================================================= */



      uint32_t ticks2 = 0;
      uint32_t timeout2 = 0;

      /* Send trigger pulse to Sensor 2 */
      HAL_GPIO_WritePin(TRIG2_GPIO_Port, TRIG2_Pin, GPIO_PIN_RESET);
      usDelay(3);
      HAL_GPIO_WritePin(TRIG2_GPIO_Port, TRIG2_Pin, GPIO_PIN_SET);
      usDelay(10);
      HAL_GPIO_WritePin(TRIG2_GPIO_Port, TRIG2_Pin, GPIO_PIN_RESET);

      /* Wait for echo from Sensor 2 */
      while (HAL_GPIO_ReadPin(ECHO2_GPIO_Port, ECHO2_Pin) == GPIO_PIN_RESET)
      {
          timeout2++;
          if (timeout2 > TIMEOUT_LIMIT) break;
      }

      /* Measure pulse width from Sensor 2 */
      timeout2 = 0;
      while (HAL_GPIO_ReadPin(ECHO2_GPIO_Port, ECHO2_Pin) == GPIO_PIN_SET)
      {
          ticks2++;
          usDelay(2);
          timeout2++;
          if (timeout2 > TIMEOUT_LIMIT) break;
      }

      /* Calculate distance for Sensor 2 */
      distance2 = ticks2 * 0.0343f / 2.0f;

      /* Optional delay between sensors */
      HAL_Delay(5);

	  /* =================================================================================================================
	   *
	   *******************************************  ULTRASONIC SENSOR->3  **************************************************
	   *
	   * ================================================================================================================= */

      uint32_t ticks3 = 0;
      uint32_t timeout3 = 0;

      /* Send trigger pulse to Sensor 3 */
      HAL_GPIO_WritePin(TRIG3_GPIO_Port, TRIG3_Pin, GPIO_PIN_RESET);
      usDelay(3);
      HAL_GPIO_WritePin(TRIG3_GPIO_Port, TRIG3_Pin, GPIO_PIN_SET);
      usDelay(10);
      HAL_GPIO_WritePin(TRIG3_GPIO_Port, TRIG3_Pin, GPIO_PIN_RESET);

      /* Wait for echo from Sensor 3 */
      while (HAL_GPIO_ReadPin(ECHO3_GPIO_Port, ECHO3_Pin) == GPIO_PIN_RESET)
      {
          timeout3++;
          if (timeout3 > TIMEOUT_LIMIT) break;
      }

      /* Measure pulse width from Sensor 3 */
      timeout3 = 0;
      while (HAL_GPIO_ReadPin(ECHO3_GPIO_Port, ECHO3_Pin) == GPIO_PIN_SET)
      {
          ticks3++;
          usDelay(2);
          timeout3++;
          if (timeout3 > TIMEOUT_LIMIT) break;
      }

      /* Calculate distance for Sensor 3 */
      distance3 = ticks3 * 0.0343f / 2.0f;

      /* ----- LED CONTROL ----- */
      /* Turn LED ON if ANY sensor detects object within range */


	  /* =================================================================================================================
	   *
	   *******************************************  MOTION CONTROL  **************************************************
	   *
	   * ================================================================================================================= */
      if ((distance1 > OBJECT_DISTANCE) &&
          (distance2 > OBJECT_DISTANCE) &&
          (distance3 > OBJECT_DISTANCE))
      {
          /* =====================================================
           * NO OBSTACLE DETECTED
           * MOTION: FORWARD
           * ===================================================== */

          HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_RESET); // LED OFF

          /* Motor A (Left Motor) - Forward */
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_4, GPIO_PIN_SET);
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_5, GPIO_PIN_RESET);

          /* Motor B (Right Motor) - Forward */
          HAL_GPIO_WritePin(GPIOA, GPIO_PIN_4, GPIO_PIN_SET);
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_0, GPIO_PIN_RESET);
      }

      /* =====================================================
       * FRONT OBSTACLE (Highest Priority)
       * ===================================================== */
      else if (distance2 < OBJECT_DISTANCE)
      {
         HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_SET); // LED ON

          /* REVERSE */
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_4, GPIO_PIN_RESET);
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_5, GPIO_PIN_SET);

          HAL_GPIO_WritePin(GPIOA, GPIO_PIN_4, GPIO_PIN_RESET);
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_0, GPIO_PIN_SET);
      }

      /* =====================================================
       * LEFT OBSTACLE ONLY
       * TURN RIGHT
       * ===================================================== */
      else if (distance1 < OBJECT_DISTANCE)
      {
          /* Left motor STOP */

    	  HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_SET); // LED ON

          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_4, GPIO_PIN_RESET);
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_5, GPIO_PIN_RESET);

          /* Right motor FORWARD */
          HAL_GPIO_WritePin(GPIOA, GPIO_PIN_4, GPIO_PIN_SET);
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_0, GPIO_PIN_RESET);
      }

      /* =====================================================
       * RIGHT OBSTACLE ONLY
       * TURN LEFT
       * ===================================================== */
      else if (distance3 < OBJECT_DISTANCE)
      {
          /* Left motor FORWARD */
    	  HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_SET); // LED ON
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_4, GPIO_PIN_SET);
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_5, GPIO_PIN_RESET);

          /* Right motor STOP */
          HAL_GPIO_WritePin(GPIOA, GPIO_PIN_4, GPIO_PIN_RESET);
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_0, GPIO_PIN_RESET);
      }

      /* =====================================================
       * SAFETY FALLBACK
       * STOP MOTORS
       * ===================================================== */

      else
      {
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_4, GPIO_PIN_RESET);
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_5, GPIO_PIN_RESET);

          HAL_GPIO_WritePin(GPIOA, GPIO_PIN_4, GPIO_PIN_RESET);
          HAL_GPIO_WritePin(GPIOB, GPIO_PIN_0, GPIO_PIN_RESET);
      }


	  /* =================================================================================================================
	   *
	   *******************************************  VACUM MOTOR  **************************************************
	   *
	   * ================================================================================================================= */

      HAL_GPIO_WritePin(GPIOB, GPIO_PIN_8, GPIO_PIN_SET);
      HAL_GPIO_WritePin(GPIOB, GPIO_PIN_9, GPIO_PIN_RESET);
      HAL_GPIO_WritePin(GPIOC, GPIO_PIN_0, GPIO_PIN_SET);
      HAL_GPIO_WritePin(GPIOC, GPIO_PIN_1, GPIO_PIN_RESET);

      /* Delay before next measurement cycle */
      HAL_Delay(100);
  }
}

/* Keep the usDelay function and other functions the same */
void usDelay(uint32_t us)
{
    if (us < 2) us = 2;
    usTIM->ARR = us - 1;
    usTIM->CNT = 0;
    usTIM->SR = 0;
    usTIM->CR1 |= TIM_CR1_CEN;
    while ((usTIM->SR & TIM_SR_UIF) == 0);
    usTIM->SR = 0;
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 16;
  RCC_OscInitStruct.PLL.PLLN = 336;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV4;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

/**
  * @brief TIM4 Initialization Function
  * @param None
  * @retval None
  */
static void MX_TIM4_Init(void)
{

  /* USER CODE BEGIN TIM4_Init 0 */

  /* USER CODE END TIM4_Init 0 */

  TIM_ClockConfigTypeDef sClockSourceConfig = {0};
  TIM_MasterConfigTypeDef sMasterConfig = {0};

  /* USER CODE BEGIN TIM4_Init 1 */

  /* USER CODE END TIM4_Init 1 */
  htim4.Instance = TIM4;
  htim4.Init.Prescaler = 84-1;
  htim4.Init.CounterMode = TIM_COUNTERMODE_UP;
  htim4.Init.Period = 65535;
  htim4.Init.ClockDivision = TIM_CLOCKDIVISION_DIV1;
  htim4.Init.AutoReloadPreload = TIM_AUTORELOAD_PRELOAD_DISABLE;
  if (HAL_TIM_Base_Init(&htim4) != HAL_OK)
  {
    Error_Handler();
  }
  sClockSourceConfig.ClockSource = TIM_CLOCKSOURCE_INTERNAL;
  if (HAL_TIM_ConfigClockSource(&htim4, &sClockSourceConfig) != HAL_OK)
  {
    Error_Handler();
  }
  sMasterConfig.MasterOutputTrigger = TIM_TRGO_RESET;
  sMasterConfig.MasterSlaveMode = TIM_MASTERSLAVEMODE_DISABLE;
  if (HAL_TIMEx_MasterConfigSynchronization(&htim4, &sMasterConfig) != HAL_OK)
  {
    Error_Handler();
  }
  /* USER CODE BEGIN TIM4_Init 2 */

  /* USER CODE END TIM4_Init 2 */

}

